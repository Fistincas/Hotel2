      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminEmploee">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" Content="Администрирование Бронирования" Height="Auto" Width="300" Margin="0,55,0,65" Click="Button_Click"></Button>
        <Button Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Content="Администрирование комнат" Height="Auto" Width="300" Margin="0,55,0,65" Click="Button_Click_1"></Button>
        <Button Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" Content="Зарегистрировать пользователя" Height="Auto" Width="300" Margin="0,55,0,65" Click="Button_Click_2"></Button>
    </Grid>
